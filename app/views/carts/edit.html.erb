
<table class="table">
<thead>
      <th>No.</th>
      <th>CD情報</th>
      <th>CD名</th>
      <th>アーティスト名</th>
      <th>枚数</th>
      <th>値段</th>

    </tr>
  </thead>
  <tbody>
    <%n=1 %>

    <%@cart.cart_cds.each do |cart_cd| %>
      <tr>
          
        <td><%=n%></td>
        <td><%= attachment_image_tag cart_cd.cd, :jacket, :fill, 100, 100, fallback: "no_image.jpg" %></td>
        <td><%= cart_cd.cd.cd_name %></td>
        <td><%=cart_cd.cd.artist.name %></td>
        <%=form_for cart_cd,url:user_cart_path(user_id: current_user.id,id: current_user.cart.id) do |f| %>
         <td><%=f.number_field :number %>
        </td><%end%>
        <td><%= cart_cd.cd.price %></td>
    
        <%n=n+1%>
        
      </tr>
    <% end %>
  </tbody>
</table>