<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label  "名前（姓、名）" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "名前（姓、名）" %>
  </div>
  <div class="field">
    <%= f.label :"名前（カナ）" %><br />
    <%= f.text_field :kana_name, autofocus: true, autocomplete: "名前（カナ）" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :"住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>
  <div class="field">
    <%= f.label :"郵便番号" %><br />
    <%= f.email_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
  </div>
  <div class="field">
    <%= f.label :"電話番号" %><br />
    <%= f.email_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
