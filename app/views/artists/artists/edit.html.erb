<%= form_for(@artist,url: artists_artist_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
 <div class="field">
    <%= f.label  "アーティスト名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "アーティスト名" %>
  </div>
  <div class="field">
    <%= f.label  :"プロフィール画像" %><br />
    <%= f.attachment_field :image, autofocus: true, autocomplete: "イメージ画像" %>
  </div>
  <div class="field">
    <%= f.label :"住所" %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>
  <div class="field">
    <%= f.label :"郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
  </div>
  <div class="field">
    <%= f.label :"電話番号" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "アーティスト紹介" %>
  <div class="actions">
    <%= f.submit "アーティスト情報変更" %>
  </div>
<% end %>
